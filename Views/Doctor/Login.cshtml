@model zorgapp.Models.Doctor
<!DOCTYPE html>

<html>
<body>

	<svg height="130" width="500">
		<defs>
			<linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="0%">
				<stop offset="0%"
					  style="stop-color:rgb(200,50,90);stop-opacity:1" />
				<stop offset="100%"
					  style="stop-color:rgb(50,20,80);stop-opacity:1" />
